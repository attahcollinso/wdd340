<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>
<form class="account" id="loginForm" action="/account/login" method="post">
    <label>Email<input type="email" name="account_email" required placeholder="Enter a valid email address"></label>
    <label for="accountPassword">Password:</label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <input type="submit" value="LOGIN">
</form>
<div>
    <span>No account? <a href="/account/registration">Sign up</a></span>
</div>